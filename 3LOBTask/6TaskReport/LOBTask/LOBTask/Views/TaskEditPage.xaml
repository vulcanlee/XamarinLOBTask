<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="LOBTask.Views.TaskEditPage"
             Title="工作記錄修改">

    <Grid
        RowSpacing="0" ColumnSpacing="0"
        >
        <!--使用者可以透過這個頁面，進行打卡，填寫工作內容、上傳圖片、回報(結束)工作等操作-->
        <ScrollView
        Orientation="Vertical">
            <StackLayout
            Orientation="Vertical"
            Spacing="0"
            Margin="10">

                <!--工作說明-->
                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HeightRequest="40"
                HorizontalOptions="Fill">
                    <BoxView
                    Color="Black"/>
                    <Label 
                    Text="工作說明"
                    HorizontalOptions="Center" VerticalOptions="Center"
                    TextColor="White"/>
                </Grid>

                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HorizontalOptions="Fill">
                    <BoxView
                    Color="Gray"/>
                    <StackLayout
                    Margin="10,0"
                    >
                        <Label 
                        Text="{Binding CurrentUserTasksVM.Title}"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        FontSize="Large"/>
                        <Label 
                        Text="{Binding CurrentUserTasksVM.Description}"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        />
                    </StackLayout>
                </Grid>

                <!--工作狀態-->
                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HeightRequest="40"
                HorizontalOptions="Fill"
                Margin="0,20,0,0">
                    <BoxView
                    Color="Black"/>
                    <Label 
                    Text="工作狀態"
                    HorizontalOptions="Center" VerticalOptions="Center"
                    TextColor="White"/>
                </Grid>

                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HorizontalOptions="Fill">
                    <BoxView
                    Color="Gray"/>
                    <StackLayout
                    Margin="10,0"
                    >
                        <Label 
                        Text="{Binding CurrentUserTasksVM.Status, Converter={StaticResource TaskStatusToStringConverter}}"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        FontSize="Large"/>
                    </StackLayout>
                </Grid>

                <!--地點打卡-->
                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HeightRequest="40"
                HorizontalOptions="Fill"
                Margin="0,20,0,0">
                    <BoxView
                    Color="Black"/>
                    <Label 
                    Text="地點打卡"
                    HorizontalOptions="Center" VerticalOptions="Center"
                    TextColor="White"/>
                </Grid>

                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HorizontalOptions="Fill">
                    <BoxView
                    Color="Gray"/>
                    <StackLayout
                    Margin="10,0"
                    >
                        <Label 
                        Text="打卡緯度"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        FontSize="Medium"/>
                        <Label 
                        Text="{Binding CurrentUserTasksVM.Checkin_Latitude}"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        />
                        <Label 
                        Text="打卡經度"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        FontSize="Medium"/>
                        <Label 
                        Text="{Binding CurrentUserTasksVM.Checkin_Longitude}"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        />

                        <Label 
                        Text="打卡時間"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        FontSize="Medium"/>
                        <Label 
                        Text="{Binding CurrentUserTasksVM.CheckinDatetime}"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        />
                        <Grid
                        RowSpacing="0" ColumnSpacing="0"
                        Margin="0,0,0,10"
                        HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Text="QR Code 打卡"
                            Command="{Binding QRCode打卡Command}"
                            />
                            <Button
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Text="GPS 打卡"
                            Command="{Binding GPS打卡Command}"
                            />
                        </Grid>
                    </StackLayout>
                </Grid>

                <!--工作資料輸入-->
                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HeightRequest="40"
                HorizontalOptions="Fill"
                Margin="0,20,0,0">
                    <BoxView
                    Color="Black"/>
                    <Label 
                    Text="工作資料輸入"
                    HorizontalOptions="Center" VerticalOptions="Center"
                    TextColor="White"/>
                </Grid>

                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HorizontalOptions="Fill"
                IsVisible="{Binding CurrentUserTasksVM.Status,Converter={StaticResource TaskCHECKINToVisibleConverter}}"
                >
                    <BoxView
                    Color="Gray"/>
                    <StackLayout
                    Margin="10,0"
                    >
                        <Label 
                        Text="{Binding CurrentUserTasksVM.Condition1_Ttile}"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"/>
                        <Entry
                        Text="{Binding CurrentUserTasksVM.Condition1_Result}"
                        TextColor="White"
                        HorizontalOptions="Fill" VerticalOptions="Start" />
                        <Label 
                        Margin="0,10,0,0"
                        Text="{Binding CurrentUserTasksVM.Condition2_Ttile}"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"/>
                        <Entry
                        Text="{Binding CurrentUserTasksVM.Condition2_Result}"
                        TextColor="White"
                        HorizontalOptions="Fill" VerticalOptions="Start" />
                        <Label 
                        Margin="0,10,0,0"
                        Text="{Binding CurrentUserTasksVM.Condition3_Ttile}"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"/>
                        <Entry
                        Text="{Binding CurrentUserTasksVM.Condition3_Result}"
                        TextColor="White"
                        HorizontalOptions="Fill" VerticalOptions="Start" />

                        <Button
                        Margin="0,0,0,10"
                        Text="工作資料儲存"
                        Command="{Binding 工作資料儲存Command}"/>
                    </StackLayout>
                </Grid>

                <!--拍照與照片上傳-->
                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HeightRequest="40"
                HorizontalOptions="Fill"
                Margin="0,20,0,0">
                    <BoxView
                    Color="Black"/>
                    <Label 
                    Text="拍照與照片上傳"
                    HorizontalOptions="Center" VerticalOptions="Center"
                    TextColor="White"/>
                </Grid>

                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HorizontalOptions="Fill"
                IsVisible="{Binding CurrentUserTasksVM.Status,Converter={StaticResource TaskINPUTToVisibleConverter}}"
                >
                    <BoxView
                    Color="Gray"/>
                    <StackLayout
                    Margin="10,0"
                    >
                        <Label 
                        Text="拍照圖片"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        FontSize="Large"/>
                        <Image 
                        Source="{Binding CurrentUserTasksVM.PhotoURL}"
                        HorizontalOptions="FillAndExpand" VerticalOptions="Start"
                        HeightRequest="200"
                        Aspect="AspectFit"/>
                        <Grid
                        RowSpacing="0" ColumnSpacing="0"
                        Margin="0,10,0,10"
                        HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Text="直接拍照"
                            Command="{Binding 直接拍照Command}"
                            />
                            <Button
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Text="相片庫挑選"
                            Command="{Binding 相片庫挑選Command}"
                            />
                        </Grid>
                    </StackLayout>
                </Grid>

                <!--工作回報-->
                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HeightRequest="40"
                HorizontalOptions="Fill"
                Margin="0,20,0,0">
                    <BoxView
                    Color="Black"/>
                    <Label 
                    Text="工作回報"
                    HorizontalOptions="Center" VerticalOptions="Center"
                    TextColor="White"/>
                </Grid>

                <!--工作回報的詳細資訊-->
                <Grid
                RowSpacing="0" ColumnSpacing="0"
                HorizontalOptions="Fill"
                IsVisible="{Binding CurrentUserTasksVM.Status,Converter={StaticResource TaskUPLOAD_IMAGEToVisibleConverter}}"
                >
                    <BoxView
                    Color="Gray"/>
                    <StackLayout
                    Margin="10,0"
                    >
                        <Label 
                        Text="工作回報時間"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        FontSize="Medium"/>
                        <Label 
                        Text="{Binding CurrentUserTasksVM.ReportedDatetime}"
                        HorizontalOptions="Fill" VerticalOptions="Start"
                        TextColor="White"
                        />
                        <Grid
                        RowSpacing="0" ColumnSpacing="0"
                        Margin="0,0,0,10"
                        HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            Text="工作回報"
                            Command="{Binding 工作回報Command}"
                            />
                        </Grid>

                    </StackLayout>
                </Grid>

                <Label
                Margin="0,30"/>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>